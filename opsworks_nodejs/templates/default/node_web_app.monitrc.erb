check host node_web_app_<%= @application_name %> with address 127.0.0.1
  start program = "/bin/bash -c 'cd <%= @deploy[:deploy_to] %>/current ; source <%= @deploy[:deploy_to] %>/shared/app.env ; /usr/bin/env PORT=8080 NODE_PATH=<%= @deploy[:deploy_to] %>/current/node_modules:<%= @deploy[:deploy_to] %>/current /usr/local/bin/node --harmony <%= @monitored_script %> 2>> <%= @deploy[:deploy_to]%>/shared/log/node.stderr.log 1>> <%= @deploy[:deploy_to]%>/shared/log/node.stdout.log'"
  stop program = "/usr/bin/pkill -f 'node --harmony <%= @monitored_script %>'"
  <% if @deploy[:ssl_support] -%>
  if failed port <%= @deploy[:nodejs][:port] %> type TCPSSL protocol HTTP
  <% else -%>
  if failed port 8080 protocol HTTP
  <% end -%>
    request /
    with timeout 10 seconds
    then restart
